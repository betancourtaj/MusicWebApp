@page
@model App.Pages.RegisterModel
@{
}


<section id="main">
    <div class="left-floating-div text-light">
        <u>
            <h1>Register</h1>
        </u>
        @using (Html.BeginForm("Register", "AccountHandler", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(Model => Model.Email, "Email")
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Email, new { @type="email", @class="mm_text", @required="required"})
            </div>

            <div>
                @Html.LabelFor(Model => Model.Username, "Username")
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Username, new { @type="text", @class="mm_text", @required="required"})
            </div>

            <div>
                @Html.LabelFor(Model => Model.Password, "Password")
            </div>
            <div>
                @Html.PasswordFor(Model => Model.Password, new { @type="password", @class="mm_text", @required="required"})
            </div>

            <input class="mm_button" type="submit" asp-page-handler="Register" value="Register"/>
        }
    </div>
</section>
